{
    "name": "Subtle Patterns",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Preview Subtle Patterns as page background.",
    "icons": {
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon-32.png",
        "default_title": "Subtle Patterns",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://api.github.com; object-src 'self'",
    "permissions": [
        "tabs",
        "*://*/*"
    ]
}